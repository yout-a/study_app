<!-- app/views/words/_form.html.erb -->

<%= form_with model: @word, local: true do |f| %>

  <div class="field">
    <%= f.label :term, "単語", for: "word_input" %>
    <%= f.text_field :term, id: "word_input" %>
  </div>

  <div class="mt-2">
    <%= button_tag "AIで意味を提案", type: :button, id: "btn-ai-meaning", class: "btn btn-primary" %>
  </div>

  <div class="field">
    <%= f.label :meaning, "意味", for: "meaning_textarea" %>
    <%= f.text_area :meaning, id: "meaning_textarea", rows: 4 %>
  </div>

  <div class="field">
    <%= f.label :memo, "メモ", for: "memo_textarea" %>
    <%= f.text_area :memo, id: "memo_textarea", rows: 3 %>
  </div>

  <div class="field">
    <%= f.label :tags_string, "タグ（カンマ区切り）", for: "tags_input" %>
    <%= f.text_field :tags_string, id: "tags_input", value: @word.tags_string %>
  </div>

  <div class="actions">
    <%= f.submit "登録する", class: "btn btn-primary" %>
    <%= link_to "戻る", words_path, class: "btn" %>
  </div>

<% end %>
