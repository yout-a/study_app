<!-- app/views/words/new.html.erb -->
<% content_for :title, "単語を登録" %>
<header class="hdr">
  <div class="wrap nav">
    <div class="logo">📘 学習補助アプリ</div>
    <nav class="links">
      <%= link_to "単語一覧", words_path %>
    </nav>
  </div>
</header>

<main class="wrap">
  <section class="card">
    <h1 class="ttl">単語を登録する</h1>
    <%= render "form", word: @word %>
  </section>
</main>

<%= form_with model: @word, url: words_path, local: true do |f| %>
  <div class="field">
    <%= f.label :term, "単語" %>
    <%= f.text_field :term, id: "term_input" %>
  </div>

  <div class="field">
    <%= f.label :meaning, "意味" %>
    <%= f.text_area :meaning, id: "meaning_textarea", rows: 4 %>
    <div class="mt-2">
      <button type="button" class="btn" id="btn-suggest-meaning">
        AIで意味を提案
      </button>
    </div>
  </div>

  <div class="field">
    <%= f.label :memo, "メモ" %>
    <%= f.text_area :memo, id: "memo_textarea", rows: 3 %>
  </div>

  <div class="field">
    <%= f.label :tags_string, "タグ（カンマ区切り）" %>
    <%= f.text_field :tags_string, id: "tags_input" %>
    <div class="mt-2">
      <button type="button" class="btn" id="btn-suggest-tags">
        AIでタグを提案
      </button>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "登録する", class: "btn primary" %>
  </div>
<% end %>